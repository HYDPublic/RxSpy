<UserControl x:Class="RxSpy.Views.Controls.TrackedObservablesGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:RxSpy.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid x:Name="observablesGrid" Margin="0,0,-13,0" AutoGenerateColumns="False">
            <DataGrid.ItemsSource>
                <x:Array Type="viewModels:RxSpyObservableGridItemViewModel">
                </x:Array>
            </DataGrid.ItemsSource>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Active subs" Binding="{Binding Path=ActiveSubscriptions, StringFormat=N0}" />
                <DataGridTextColumn Header="Total subs" Binding="{Binding Path=TotalSubscriptions, StringFormat=N0}" />
                <DataGridTextColumn Header="Values" Binding="{Binding Path=ValuesProduced, StringFormat=N0}" />
                <DataGridTextColumn Header="Created at" Binding="{Binding Path=CallSite}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
